pipeline {
    agent any
    environment {
        FTP_SERVER = 'ftp://52.66.250.18/'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    
                    bat "dotnet restore"

                    bat "dotnet build --configuration Release"
                }
            }
        }

        stage('Test') {
            steps {
                script {
                  
                    bat "dotnet test --no-restore --configuration Release"
                }
            }
        }

        stage('Publish') {
            steps {
                script {
                    
                    bat "dotnet publish --no-restore --configuration Release --output .\\publish"
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                   withCredentials([usernamePassword(credentialsId: 'user', usernameVariable: 'FTP_USER', passwordVariable: 'FTP_PASS')]) {
                       bat """
                           echo open 52.66.250.18 > ftp_commands.txt
                           echo user %FTP_USER% %FTP_PASS% >> ftp_commands.txt
                           echo binary >> ftp_commands.txt
                           echo cd /xyz >> ftp_commands.txt
                           echo mput .\\publish\\* >> ftp_commands.txt
                           echo bye >> ftp_commands.txt
                           ftp -s:ftp_commands.txt
                        """
                    }
                }
            }
        }
      

    }

    post {
        success {
            echo 'Build, test, and publish successful!'
        }
    }
}
