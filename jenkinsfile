pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    
                    bat "dotnet restore"

                    bat "dotnet build --configuration Release"
                }
            }
        }

        stage('Test') {
            steps {
                script {
                  
                    bat "dotnet test --no-restore --configuration Release"
                }
            }
        }

        stage('Publish') {
            steps {
                script {
                    
                    bat "dotnet publish --no-restore --configuration Release --output .\\publish"
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                   withCredentials([usernamePassword(credentialsId: 'user', usernameVariable: 'FTP_USER', passwordVariable: 'FTP_PASS')]) {
                    powershell '''
                  
                    $credential = New-Object System.Management.Automation.PSCredential($env:FTP_USER,(ConvertTo-SecureString $env:FTP_PASS -AsPlainText -Force))

                    Copy-Item -Path 'publish\\*' -Destination '\' -Force

                    '''
                    }
                }
            }
        }
      

    }

    post {
        success {
            echo 'Build, test, and publish successful!'
        }
    }
}
